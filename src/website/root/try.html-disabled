        margin: 0;
        border: 0;
        width: 100%;
        background: black;
    "></iframe>
<script>
    function layoutConsole(){
        var el = document.getElementById("console")
        el.style.display = 'block'
        el.style.height = (window.innerHeight - el.offsetTop) + "px"
    }
    window.addEventListener("load", function(){layoutConsole()})
    window.addEventListener("resize", function(){layoutConsole()})
</script>
